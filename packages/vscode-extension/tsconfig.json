{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES2019",
        "declaration": true,
        "lib": [
            "ES2020",
            "ESNext.AsyncIterable"
        ],
        "outDir": "out/src",
        "sourceMap": true,
        "strict": true,  /* enable all strict type-checking options */
        "esModuleInterop": true,
        "types": ["node"],
        "typeRoots": [
            "./src/@types/**/*.d.ts",
            "node_modules/@types"
        ]
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        ".vscode-test"
    ]
}
