{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES6",
        "outDir": "out",
        "lib": [
            "ES2020",
            "ESNext.AsyncIterable"
        ],
        "sourceMap": true,
        "rootDir": "src",
        "strict": true,  /* enable all strict type-checking options */
        "esModuleInterop": true,
        "types": [],
        "typeRoots": [
            "./src/@types/**/*.d.ts",
            "node_modules/@types"
        ]
    },
    "exclude": [
        "node_modules",
        ".vscode-test",
        "../../node_modules/*"
    ]
}
