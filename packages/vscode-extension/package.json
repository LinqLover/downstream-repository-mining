{
    "name": "dowdep-vscode-extension",
    "displayName": "Downstream Dependency Miner",
    "description": "Mine usage information about your JavaScript/TypeScript package from dependent repositories.",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.57.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:dowdep.refreshPackages"
    ],
    "main": "./out/extension.js",
    "capabilities": {
        "untrustedWorkspaces": {
            "supported": "limited",
            "description": "Only a limited number of dependencies will be mined in untrusted mode."
        }
    },
    "contributes": {
        "commands": [
            {
                "command": "dowdep.refreshPackages",
                "title": "Refresh packages",
                "icon": "$(refresh)"
            },
            {
                "command": "dowdep.refreshAllDependencies",
                "title": "Refresh all dependencies",
                "icon": "$(refresh)"
            },
            {
                "command": "dowdep.refreshAllReferences",
                "title": "Refresh all references",
                "icon": "$(refresh)"
            }
        ],
        "menus": {
            "view/title": [
                {
                    "command": "dowdep.refreshPackages",
                    "when": "view == dowdepDependencies",
                    "group": "navigation"
                }
            ]
        },
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "dowdepContainer",
                    "title": "Downstream Dependencies",
                    "icon": "assets/dowdep.svg"
                }
            ]
        },
        "views": {
            "dowdepContainer": [
                {
                    "id": "dowdepDependencies",
                    "name": "Downstream Dependencies"
                },
                {
                    "id": "dowdepReferences",
                    "name": "Downstream References"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "yarn run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "tsc -p ./tsconfig.test.json",
        "lint": "eslint src test --ext ts",
        "test": "node ./out/runTest.js"
    },
    "dependencies": {
        "dowdep": "file:./../core",
        "it-all": "^1.0.5",
        "lodash": "^4.17.21",
        "normalize-package-data": "^3.0.3",
        "truncate": "^2.1.0",
        "try-to-catch": "^3.0.0"
    },
    "devDependencies": {
        "@types/assert": "^1.5.6",
        "@types/glob": "^7.1.3",
        "@types/lodash": "^4.14.172",
        "@types/mocha": "^8.2.2",
        "@types/node": "^14.17.15",
        "@types/normalize-package-data": "^2.4.1",
        "@types/try-to-catch": "^3.0.0",
        "@types/vscode": "^1.57.0",
        "@typescript-eslint/eslint-plugin": "^4.26.0",
        "@typescript-eslint/parser": "^4.26.0",
        "eslint": "^7.27.0",
        "glob": "^7.1.7",
        "mocha": "^8.4.0",
        "typescript": "^4.3.2",
        "vscode-test": "^1.5.2"
    }
}
