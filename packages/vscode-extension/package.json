{
    "name": "dowdep-vscode-extension",
    "displayName": "Downstream Dependency Miner",
    "description": "Mine usage information about your JavaScript/TypeScript package from dependent repositories.",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.57.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:dowdep.refreshPackages",
        "onCommand:dowdep.refreshAllDependencies",
        "onCommand:dowdep.refreshAllReferences",
        "onCommand:dowdep.refreshAllDependenciesAndReferences",
        "onView:dowdepDependencies",
        "onView:dowdepReferences",
        "workspaceContains:./package.json"
    ],
    "main": "./out/extension.js",
    "capabilities": {
        "untrustedWorkspaces": {
            "supported": true
        }
    },
    "contributes": {
        "commands": [
            {
                "command": "dowdep.refreshPackages",
                "category": "Downstream Dependencies",
                "title": "Refresh packages",
                "icon": "$(refresh)"
            },
            {
                "command": "dowdep.refreshAllDependencies",
                "category": "Downstream Dependencies",
                "title": "Refresh all dependencies",
                "icon": "$(refresh)"
            },
            {
                "command": "dowdep.refreshAllReferences",
                "category": "Downstream Dependencies",
                "title": "Refresh all references",
                "icon": "$(refresh)"
            },
            {
                "command": "dowdep.refreshAllDependenciesAndReferences",
                "category": "Downstream Dependencies",
                "title": "Refresh all dependencies and references",
                "icon": "$(refresh)"
            }
        ],
        "configuration": {
            "title": "Downstream Dependencies",
            "properties": {
                "dowdep.dependencyLimit": {
                    "type": [
                        "number",
                        "null"
                    ],
                    "markdownDescription": "Indicates how many downstreams dependencies will be downloaded. Specify `null` for downloading all references (try this at your own risk).",
                    "default": 10
                },
                "dowdep.enableCodeLens": {
                    "type": "boolean",
                    "default": true,
                    "description": "Controls whether references from downstream dependencies will be displayed in the editor."
                },
                "dowdep.githubOAuthToken": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "markdownDescription": "The token that is used to retrieve additional information about downstream dependencies from GitHub. You can generate a token in the [GitHub developer settings](https://github.com/settings/tokens/new).",
                    "default": null,
                    "pattern": "^ghp_[0-9a-zA-Z]{36}$"
                },
                "dowdep.referenceSearchStrategy": {
                    "type": "string",
                    "description": "Indicates the strategy that is used for finding usage samples in downstream dependencies.",
                    "enum": [
                        "types",
                        "heuristic"
                    ],
                    "enumDescriptions": [
                        "Uses the TypeScript compiler for searching references. Recommended.",
                        "Searches dependencies for imports of the analyzed package by using a simple heuristic. For demonstrational purpose only."
                    ],
                    "default": "types"
                }
            }
        },
        "menus": {
            "view/title": [
                {
                    "command": "dowdep.refreshPackages",
                    "when": "view == dowdepDependencies",
                    "group": "navigation"
                }
            ]
        },
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "dowdepContainer",
                    "title": "Downstream Dependencies",
                    "icon": "assets/dowdep.svg"
                }
            ]
        },
        "views": {
            "dowdepContainer": [
                {
                    "id": "dowdepDependencies",
                    "name": "Downstream Dependencies"
                },
                {
                    "id": "dowdepReferences",
                    "name": "Downstream References"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "yarn run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "tsc -p ./tsconfig.test.json",
        "lint": "eslint src test --ext ts",
        "test": "node ./out/runTest.js"
    },
    "dependencies": {
        "dowdep": "file:./../core",
        "it-all": "^1.0.5",
        "lodash": "^4.17.21",
        "node-filter-async": "^2.0.0",
        "normalize-package-data": "^3.0.3",
        "truncate": "^2.1.0",
        "try-to-catch": "^3.0.0"
    },
    "devDependencies": {
        "@types/assert": "^1.5.6",
        "@types/glob": "^7.1.4",
        "@types/lodash": "^4.14.173",
        "@types/mocha": "^9.0.0",
        "@types/node": "16.x",
        "@types/normalize-package-data": "^2.4.1",
        "@types/try-to-catch": "^3.0.0",
        "@types/vscode": "^1.60.0",
        "@typescript-eslint/eslint-plugin": "^4.31.2",
        "@typescript-eslint/parser": "^4.31.2",
        "eslint": "^7.32.0",
        "glob": "^7.2.0",
        "mocha": "^9.1.1",
        "typescript": "^4.4.3",
        "vscode-test": "^1.6.1"
    }
}
