{
    "compilerOptions": {
        "baseUrl": "./src",
        "declaration": true,
        "importHelpers": true,
        "lib": [
            "ES2020",
            "ESNext.AsyncIterable"
        ],
        "module": "commonjs",
        "outDir": "lib",
        "rootDir": "src",
        "strict": true,
        "target": "ES2019",
        "types": [
            "node"
        ],
        "typeRoots": [
            "./src/@types/**/*.d.ts",
            "node_modules/@types",
        ],
        "esModuleInterop": true,
        "strictNullChecks": true,
        "noImplicitAny": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "ts-node": {
        "files": true
    }
}
